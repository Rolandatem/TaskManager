<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- BRUSHES -->
    <SolidColorBrush x:Key="ComboBox.Background" Color="{StaticResource Global.Main.Light.Color}" />
    <SolidColorBrush x:Key="ComboBox.Foreground" Color="{StaticResource Global.TextInput.Color}" />
    <SolidColorBrush x:Key="ComboBox.Border" Color="{StaticResource Global.TextInput.Border.Color}" />
    <SolidColorBrush x:Key="ComboBox.Item.Highlight.Background" Color="{StaticResource Global.Main.Lighter.Color}" />
    <SolidColorBrush x:Key="ComboBox.Item.Highlight.Border" Color="{StaticResource Global.SecondaryAccent.Color}" />

    <!-- GLOBAL -->
    <ControlTemplate x:Key="GlobalComboBoxTemplate" TargetType="{x:Type ComboBox}">
        <Border Background="{StaticResource Global.Textbox.Background}" BorderBrush="{StaticResource Global.TextInput.Border}" BorderThickness="1" CornerRadius="5">
            <Grid>
                <!-- TOGGLE BUTTON -->
                <ToggleButton Name="ToggleButton"
                              Focusable="False"
                              IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                              ClickMode="Press">
                    <ToggleButton.Template>
                        <ControlTemplate TargetType="{x:Type ToggleButton}">
                            <Border Background="{StaticResource ComboBox.Background}" CornerRadius="5">
                                <Grid>
                                    <Path x:Name="Arrow" 
                                      Grid.Column="1"
                                      Margin="0,0,5,0"
                                      Fill="{StaticResource ComboBox.Foreground}" 
                                      HorizontalAlignment="Right" 
                                      VerticalAlignment="Center" 
                                      Data="M0,0 L0,2 L4,6 L8,2 L8,0 L4,4 z" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </ToggleButton.Template>
                </ToggleButton>
                
                <!-- CONTENT PRESENTER -->
                <ContentPresenter x:Name="ContentSite"
                                  IsHitTestVisible="False"
                                  Margin="5,0,20,0"
                                  VerticalAlignment="Center"
                                  Content="{TemplateBinding SelectionBoxItem}"
                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" />

                <!-- EDITABLE TEXT BOX -->
                <TextBox x:Name="PART_EditableTextBox"
                         Height="Auto"
                         Focusable="True"
                         Margin="5,0,15,0"
                         VerticalAlignment="Center"
                         VerticalContentAlignment="Center"
                         Visibility="Hidden"
                         IsReadOnly="{TemplateBinding IsReadOnly}">
                    <TextBox.Template>
                        <ControlTemplate TargetType="{x:Type TextBox}">
                            <Border x:Name="PART_ContentHost" Focusable="True" Background="{TemplateBinding Background}" CornerRadius="5" />
                        </ControlTemplate>
                    </TextBox.Template>
                </TextBox>

                <!-- POPUP -->
                <Popup x:Name="Popup"
                       Placement="Bottom"
                       IsOpen="{TemplateBinding IsDropDownOpen}"
                       AllowsTransparency="True"
                       Focusable="False"
                       PopupAnimation="Slide">
                    <Grid x:Name="DropDown"
                          SnapsToDevicePixels="True"
                          MinWidth="{TemplateBinding ActualWidth}"
                          MaxHeight="{TemplateBinding MaxDropDownHeight}">
                        <Border x:Name="DropDownBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1" />
                        <ScrollViewer Margin="0" Padding="5,8,5,5" SnapsToDevicePixels="True">
                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
                        </ScrollViewer>
                    </Grid>
                </Popup>
            </Grid>
        </Border>

        <ControlTemplate.Triggers>
            <Trigger Property="HasItems" Value="false">
                <Setter TargetName="DropDownBorder" Property="MinHeight" Value="95" />
            </Trigger>
            <Trigger Property="IsEnabled" Value="false">
                <Setter Property="Foreground" Value="#888888"/>
            </Trigger>
            <Trigger Property="IsGrouping" Value="true">
                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
            </Trigger>
            <Trigger SourceName="Popup" Property="Popup.AllowsTransparency" Value="true">
                <Setter TargetName="DropDownBorder" Property="CornerRadius" Value="0"/>
                <Setter TargetName="DropDownBorder" Property="Margin" Value="0,2,0,0"/>
            </Trigger>
            <Trigger Property="IsEditable"  Value="true">
                <Setter Property="IsTabStop" Value="false"/>
                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                <Setter TargetName="ContentSite" Property="Visibility" Value="Hidden"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style TargetType="{x:Type ComboBox}">
        <Setter Property="Height" Value="25" />
        <Setter Property="Foreground" Value="{StaticResource ComboBox.Foreground}" />
        <Setter Property="Background" Value="{StaticResource ComboBox.Background}" />
        <Setter Property="BorderBrush" Value="{StaticResource ComboBox.Border}" />
        <Setter Property="Template" Value="{StaticResource GlobalComboBoxTemplate}" />
        <Style.Resources>
            <Style TargetType="{x:Type ComboBoxItem}">
                <Setter Property="SnapsToDevicePixels" Value="true"/>
                <Setter Property="Foreground" Value="{StaticResource ComboBox.Foreground}"/>
                <Setter Property="OverridesDefaultStyle" Value="true"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                            <Border Name="Border"
                            Padding="5,3,5,3"
                            BorderBrush="Transparent"
                            BorderThickness="1"
                            SnapsToDevicePixels="true">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsHighlighted" Value="true">
                                    <Setter TargetName="Border" Property="Background" Value="{StaticResource ComboBox.Item.Highlight.Background}"/>
                                    <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource ComboBox.Item.Highlight.Border}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="false">
                                    <Setter Property="Foreground" Value="#888888"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Style.Resources>
    </Style>

    <!--<Style x:Key="{x:Type ComboBoxItem}" TargetType="{x:Type ComboBoxItem}">

        <Setter Property="Template">
            <Setter.Value>

            </Setter.Value>
        </Setter>
    </Style>-->

</ResourceDictionary>