<Application x:Class="IncStores.TaskManager.WpfTaskViewer.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:tb="http://www.hardcodet.net/taskbar">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <!-- STYLES -->
                <ResourceDictionary Source="/Content/Styles/BrushStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/PasswordBoxStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/TextBlockStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/TextBoxStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/CheckboxStyles.xaml" />
                <ResourceDictionary Source="/Content/Styles/DataGridStyles.xaml" />

                <!-- TEMPLATES -->
                <ResourceDictionary Source="/Content/Templates/GridSplitterTemplates.xaml" />
                <ResourceDictionary Source="/Content/Templates/MainMenuTemplate.xaml" />
                <ResourceDictionary Source="/Content/Templates/ContentSectionTemplates.xaml" />
                <ResourceDictionary Source="/Content/Templates/ComboBoxTemplates.xaml" />
                <ResourceDictionary Source="/Content/Templates/ContextMenuTemplates.xaml" />
                <ResourceDictionary Source="/Content/Templates/RecipeProgressTemplate.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- TASKBAR -->
            <tb:TaskbarIcon x:Key="WPFTaskViewerNotifyIcon"
                    IconSource="/Content/Icons/SystemTrayIcon.ico"
                    ToolTipText="Hello World!" />
            
            <!-- FONTS -->
            <FontFamily x:Key="OpenSans">pack://application:,,,/Content/Fonts/OpenSans/#Open Sans Condensed</FontFamily>
            <FontFamily x:Key="Roboto">pack://application:,,,/Content/Fonts/Roboto/#Roboto</FontFamily>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
