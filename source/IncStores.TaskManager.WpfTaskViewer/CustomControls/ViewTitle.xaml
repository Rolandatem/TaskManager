<UserControl x:Class="IncStores.TaskManager.WpfTaskViewer.CustomControls.ViewTitle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IncStores.TaskManager.WpfTaskViewer.CustomControls"
             mc:Ignorable="d">

    <UserControl.Resources>
        <LinearGradientBrush x:Key="ViewTitle.Border" StartPoint="0,.5" EndPoint="1,.5">
            <GradientStop Color="Black" Offset="0.0" />
            <GradientStop Color="Transparent" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="ViewTitle.Background" StartPoint="0,.5" EndPoint="1,.5">
            <GradientStop Color="{StaticResource Global.Accent.Color}" Offset="0.0" />
            <GradientStop Color="Transparent" Offset="1" />
        </LinearGradientBrush>
    </UserControl.Resources>

    <Border BorderBrush="{StaticResource ViewTitle.Border}" BorderThickness="1">
        <TextBlock 
            Padding="10,0,10,0"
            VerticalAlignment="Center"
            Background="{StaticResource ViewTitle.Background}" 
            FontFamily="{StaticResource OpenSans}"
            FontSize="20px"
            Foreground="White" Text="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:ViewTitle}}, Path=Title}">

            <TextBlock.Effect>
                <DropShadowEffect />
            </TextBlock.Effect>
        </TextBlock>
    </Border>
    
</UserControl>
