<UserControl x:Class="IncStores.TaskManager.WpfTaskViewer.Views.Monitors.DBAuditLogMonitorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:IncStores.TaskManager.WpfTaskViewer.ViewModels.Monitors"
             xmlns:cc="clr-namespace:IncStores.TaskManager.WpfTaskViewer.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Background="{StaticResource Global.AppWorkspace.Background}"
             FontFamily="{StaticResource Roboto}"
             d:DataContext="{d:DesignInstance Type=vm:DBAuditLogMonitorViewModelDesign, IsDesignTimeCreatable=True}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <cc:ViewTitle Grid.Row="0" Title="DB Audit Log Monitor" />

        <cc:ContentSection Grid.Row="1" Margin="0,10,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Group Key Filter:" VerticalAlignment="Center" />
                    <ComboBox ItemsSource="{Binding GroupKeys}" SelectedItem="{Binding SelectedGroupKey}" Margin="5,0,0,0" />

                    <TextBlock Text="Max Records:" VerticalAlignment="Center" Margin="10,0,0,0" />
                    <TextBox Text="{Binding MaxRecordsRequested}" Margin="5,0,0,0" Width="35" />
                </StackPanel>

                <Button Content="Refresh" Command="{Binding RefreshAuditLogCommand}" HorizontalAlignment="Right" />
            </Grid>
        </cc:ContentSection>

        <cc:ContentSection Grid.Row="2" Margin="0,10,0,0">
            <DataGrid ItemsSource="{Binding FilteredAuditLog}" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True" HeadersVisibility="Column">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Date" Binding="{Binding AuditDateTime}" />
                    <DataGridTextColumn Header="Group Key" Binding="{Binding GroupKey}" />
                    <DataGridTextColumn Header="Initiator" Binding="{Binding Initiator}" />
                    <DataGridTextColumn Header="Message" Binding="{Binding Message}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </cc:ContentSection>
    </Grid>
    
</UserControl>
