<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- BRUSHES -->
    <SolidColorBrush x:Key="ContextMenu.Background" Color="{StaticResource Global.Main.Light.Color}" />
    <SolidColorBrush x:Key="ContextMenu.Foreground" Color="{StaticResource Global.TextInput.Color}" />
    <SolidColorBrush x:Key="ContextMenu.Border" Color="{StaticResource Global.TextInput.Border.Color}" />

    <SolidColorBrush x:Key="ContextMenu.MenuItem.Highlight.Background" Color="{StaticResource Global.Main.Lighter.Color}" />
    <SolidColorBrush x:Key="ContextMenu.MenuItem.Highlight.Border" Color="{StaticResource Global.SecondaryAccent.Color}" />
    <SolidColorBrush x:Key="ContextMenu.MenuItem.Disabled.Foreground" Color="#FF707070" />

    <!-- GLOBAL -->
    <ControlTemplate x:Key="GlobalContextMenuTemplate" TargetType="{x:Type ContextMenu}">
        <Grid SnapsToDevicePixels="True"
              MinWidth="{TemplateBinding ActualWidth}"
              MaxHeight="{TemplateBinding MaxHeight}">
            <Border Background="{TemplateBinding Background}"
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="1"/>
            <ScrollViewer Margin="0" Padding="5,5" SnapsToDevicePixels="True" VerticalScrollBarVisibility="Auto">
                <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained" />
            </ScrollViewer>
        </Grid>
    </ControlTemplate>

    <Style TargetType="{x:Type ContextMenu}">
        <Setter Property="Background" Value="{StaticResource ContextMenu.Background}" />
        <Setter Property="Foreground" Value="{StaticResource ContextMenu.Foreground}" />
        <Setter Property="BorderBrush" Value="{StaticResource ContextMenu.Border}" />
        <Setter Property="Template" Value="{StaticResource GlobalContextMenuTemplate}" />
        <Style.Resources>
            <Style TargetType="{x:Type MenuItem}">
                <Setter Property="Padding" Value="6,3" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type MenuItem}">
                            <Border x:Name="MenuItemBorder" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Padding="{TemplateBinding Padding}">
                                <ContentPresenter ContentSource="Header" />
                            </Border>

                            <ControlTemplate.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" TargetName="MenuItemBorder" Value="{StaticResource ContextMenu.MenuItem.Highlight.Background}" />
                                    <Setter Property="BorderBrush" TargetName="MenuItemBorder" Value="{StaticResource ContextMenu.MenuItem.Highlight.Border}" />
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="TextElement.Foreground" TargetName="MenuItemBorder" Value="{StaticResource ContextMenu.MenuItem.Disabled.Foreground}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Style.Resources>
    </Style>
    
</ResourceDictionary>